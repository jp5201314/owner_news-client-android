<?xml version="1.0" encoding="utf-8"?>
<!--
android:fitsSystemWindows="true"
自动添加一个状态栏高度的padding，让下面的内容不会堆积到状态栏下面
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/color_gray_d8d8d8"
    tools:context="cn.cnlinfo.news.ui.activity.channel.ChannelActivity">
    <include layout="@layout/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            style="@style/manage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的频道"/>

        <TextView
            style="@style/manage_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="长按拖拽排序或点击删除"/>
    </LinearLayout>

    <!-- android:overScrollMode="never"就是不显示边界阴影效果 -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_checked_list"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            style="@style/manage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多频道"/>

        <TextView
            style="@style/manage_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="点击添加"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_unchecked_list"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
