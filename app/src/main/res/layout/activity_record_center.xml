<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/icon_background"
    tools:context="cn.cnlinfo.ccf.activity.RecordCenterActivity">

    <include layout="@layout/item_title_no_right"/>
    <include layout="@layout/item_image"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="18dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_to_out"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="对外转账记录"
            style="@style/text_0e1214_17"
            android:gravity="center_vertical"
            android:background="@drawable/selector_text_view_bg"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_gray_eae8db"/>
        <TextView
            android:id="@+id/tv_to_self"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="自身转账记录"
            style="@style/text_0e1214_17"
            android:gravity="center_vertical"
            android:background="@drawable/selector_text_view_bg"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_gray_eae8db"/>
        <TextView
            android:id="@+id/tv_step_record"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="步行记录"
            style="@style/text_0e1214_17"
            android:gravity="center_vertical"
            android:background="@drawable/selector_text_view_bg"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_gray_eae8db"/>
        <TextView
            android:id="@+id/tv_contribute_value_record"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="贡献值记录"
            style="@style/text_0e1214_17"
            android:gravity="center_vertical"
            android:background="@drawable/selector_text_view_bg"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_gray_eae8db"/>
        <TextView
            android:id="@+id/tv_basic_contribution_rate_record"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="基础贡献率记录"
            style="@style/text_0e1214_17"
            android:gravity="center_vertical"
            android:background="@drawable/selector_text_view_bg"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_gray_eae8db"/>
        <TextView
            android:id="@+id/tv_conversion_record"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="兑换记录"
            style="@style/text_0e1214_17"
            android:gravity="center_vertical"
            android:background="@drawable/selector_text_view_bg"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_gray_eae8db"/>
        <TextView
            android:id="@+id/tv_e_wallet_record"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="电子钱包转账记录"
            style="@style/text_0e1214_17"
            android:gravity="center_vertical"
            android:background="@drawable/selector_text_view_bg"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_gray_eae8db"/>
        <TextView
            android:id="@+id/tv_shopping_record"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="购物记录"
            style="@style/text_0e1214_17"
            android:gravity="center_vertical"
            android:background="@drawable/selector_text_view_bg"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_gray_eae8db"/>
        <TextView
            android:id="@+id/tv_deal_record"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="交易记录"
            style="@style/text_0e1214_17"
            android:gravity="center_vertical"
            android:background="@drawable/selector_text_view_bg"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_gray_eae8db"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
